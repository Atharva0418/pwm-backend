<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name ="dev">
        <appender name = "CONSOLE" class = "ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="com.atharvadholakia.password_manager.logging.MaskingPatternLayout">
                    <pattern>%d{yyyy-MM-dd HH-mm-ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
                </layout>
            </encoder>
        </appender>

        <logger name="org.springframework" level="OFF"/>
        <logger name="org.apache" level="OFF"/>
        <logger name="org.hibernate.validator" level="OFF"/>
        <logger name="org.hibernate" level="OFF"/>
        <logger name="com.zaxxer.hikari" level="OFF" />
        <logger name ="io.github.resilience4j.spring6.utils.ReactorOnClasspathCondition" level ="OFF"/>
        <logger name = "io.github.resilience4j.spring6.utils.RxJava2OnClasspathCondition" level ="OFF" />
        <logger name="reactor.netty" level="OFF" />
        <logger name="org.springframework.web.reactive.function.client" level="OFF" />
        <logger name="reactor.core.publisher" level="OFF" />
        <logger name="reactor.netty.channel.FluxReceive" level="OFF" />
        <logger name="reactor.netty.http.client.HttpClientOperations" level="OFF" />
        <logger name="io.netty" level="OFF" />
        <logger name="reactor-http-nio" level="OFF" />
        <logger name="i.n.util" level="OFF" />
        <logger name="io.netty.channel.nio" level="OFF" />
        <logger name="i.n.handler.codec.compression" level="OFF" />

        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>

    </springProfile>

    <springProfile name ="prod">
        <appender name = "CONSOLE" class = "ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="com.atharvadholakia.password_manager.logging.MaskingPatternLayout">
                    <pattern>%d{yyyy-MM-dd HH-mm-ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
                </layout>
            </encoder>
        </appender>

        <logger name="org.springframework" level="OFF"/>
        <logger name="org.apache" level="OFF"/>
        <logger name="org.hibernate.validator" level="OFF"/>
        <logger name="org.hibernate" level="OFF"/>
        <logger name="com.zaxxer.hikari" level="OFF" />
        <logger name ="io.github.resilience4j.spring6.utils.ReactorOnClasspathCondition" level ="OFF"/>
        <logger name = "io.github.resilience4j.spring6.utils.RxJava2OnClasspathCondition" level ="OFF" />
        <logger name="reactor.netty" level="OFF" />
        <logger name="org.springframework.web.reactive.function.client" level="OFF" />
        <logger name="reactor.core.publisher" level="OFF" />
        <logger name="reactor.netty.channel.FluxReceive" level="OFF" />
        <logger name="reactor.netty.http.client.HttpClientOperations" level="OFF" />
        <logger name="io.netty" level="OFF" />
        <logger name="reactor-http-nio" level="OFF" />
        <logger name="i.n.util" level="OFF" />
        <logger name="io.netty.channel.nio" level="OFF" />
        <logger name="i.n.handler.codec.compression" level="OFF" />

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>

